<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Patient</title>
        <script src="https://unpkg.com/feather-icons"></script>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
        
        <h1>Patient</h1>
        <form class="d-flex" method="POST" action="searchPatient">
          <input class="form-control me-2 input-form" type="search" placeholder="Search" aria-label="Search" name="name">
          <button class="btn btn-form" type="submit">Search By Name</button>
        </form>
        <a href="PatientForm"><button type="button" class="btn">Add</button></a>
        
        <div class="main">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Patient_id</th>
                <th scope="col">phone</th>
                <th scope="col">P_Name</th>
                <th scope="col">age</th>
                <th scope="col">Gender</th>
                <th scope="col">address</th>
                <th scope="col">Zip</th>
                <th scope="col">City</th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach(function(hosp){ %>
                    <tr>
                      <td><%= hosp.Patient_id%></td>
                      <td><%= hosp.phone%></td>
                      <td><%= hosp.P_Name%></td>
                      <td><%= hosp.age%></td>
                      <td><%= hosp.Gender%></td>
                      <td><%= hosp.address%></td>
                      <td><%= hosp.Zip%></td>
                      <td><%= hosp.City%></td>
                    </tr>
                    <% }) %>
            </tbody>
          </table>
        </div>

          <script>
            feather.replace()
          </script>
        <script src="" async defer></script>
    </body>
</html>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Doctor</title>
        <script src="https://unpkg.com/feather-icons"></script>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
        
        <h1>Doctor</h1>
        <form class="d-flex" method="POST" action="search">
          <input class="form-control me-2 input-form" type="search" placeholder="Search" aria-label="Search" name="D_name">
          <button class="btn btn-form" type="submit">Search By Name</button>
        </form>
        <a href="DoctorForm"><button type="button" class="btn">Add</button></a>
        
        <div class="main">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">D_id</th>
                <th scope="col">D_name</th>
                <th scope="col">Address</th>
                <th scope="col">position</th>
                <th scope="col">phone</th>
                <th scope="col">office</th>
                <th scope="col">city</th>
                <th scope="col">zip</th>
                <th scope="col">gender</th>
                <th scope="col">age</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach(function(hosp){ %>
                    <tr>
                      <td><%= hosp.D_id%></td>
                      <td><%= hosp.D_name%></td>
                      <td><%= hosp.Address%></td>
                      <td><%= hosp.position%></td>
                      <td><%= hosp.phone%></td>
                      <td><%= hosp.office%></td>
                      <td><%= hosp.city%></td>
                      <td><%= hosp.Zip%></td>
                      <td><%= hosp.gender%></td>
                      <td><%= hosp.age%></td>
                      <td><a href="/DoctorEdit/<%= hosp.D_id %>"><i data-feather="edit-2"></i></a></td>
                    </tr>
                    <% }) %>
            </tbody>
          </table>
        </div>

          <script>
            feather.replace()
          </script>
        <script src="" async defer></script>
    </body>
</html>
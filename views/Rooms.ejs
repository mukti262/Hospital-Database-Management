<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Rooms</title>
        <script src="https://unpkg.com/feather-icons"></script>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
        
        <h1>Rooms</h1>
        <a href="/RoomsForm"><button type="button" class="btn">Add</button></a>
        
        <div class="main">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Room_number</th>
                <th scope="col">Department</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach(function(hosp){ %>
                    <tr>
                      <td><%= hosp.Room_number%></td>
                      <td><%= hosp.Department%></td>
                      <td><a href="/Rooms/<%= hosp.Room_number %>"><i data-feather="trash"></i></a></td>
                    </tr>
                    <% }) %>
            </tbody>
          </table>
        </div>

          <script>
            feather.replace()
          </script>
        <script src="" async defer></script>
    </body>
</html>